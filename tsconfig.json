{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest", "react", "react-native"],
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    },
    "customConditions": ["react-native", "development", "browser"],

    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
"include": ["**/*.ts", "**/*.tsx", "src/types/**/*.d.ts"]

}
