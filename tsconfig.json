{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest"],
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/src/*": [
        "./src/*"
      ]
    },
    "customConditions": [
      "react-native",
      "development",
      "browser"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
